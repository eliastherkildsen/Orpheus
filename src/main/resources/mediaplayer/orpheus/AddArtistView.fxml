                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../css/images/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnSearch" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#switchToSearchView" prefHeight="0.0" prefWidth="150.0" text="Search" textFill="WHITE">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../css/images/search.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnPlaylist" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#switchToPlaylistView" prefHeight="0.0" prefWidth="150.0" text="Playlist" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../css/images/list-video.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnImport" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onActionbtnImportClick" prefHeight="0.0" prefWidth="150.0" text="Import" textFill="WHITE">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../css/images/file-up.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Pane maxHeight="-Infinity" prefHeight="2000" prefWidth="200.0" />
            <VBox alignment="BOTTOM_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="110.0" prefWidth="80.0" />
            </children>
        </VBox>
    </left>
    <bottom>
        <HBox prefHeight="30.0" prefWidth="600.0" style="-fx-alignment: center;" styleClass="footer_colour" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onBtnUpdateClick" prefHeight="37.0" prefWidth="60.0" text="Update" textFill="WHITE" />
                <Button fx:id="btnCancel" alignment="BASELINE_LEFT" layoutX="66.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnCancelClick" prefHeight="37.0" prefWidth="60.0" text="Cancel" textFill="WHITE" />
            </children>
        </HBox>
    </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="535.0" text="Create New Artist">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="37.0" prefWidth="90.0" text="First Name">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="fldArtistFirstName" prefHeight="40.0" prefWidth="300.0" promptText="First Name">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="37.0" prefWidth="90.0" text="Last Name">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="fldArtistLastName" prefHeight="40.0" prefWidth="300.0" promptText="Last Name">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="182.0" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="37.0" prefWidth="90.0" text="Artist Name">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="fldArtistName" prefHeight="40.0" prefWidth="300.0" promptText="Artist Name">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <Pane prefHeight="200.0" prefWidth="85.0" BorderPane.alignment="CENTER" />
   </right>
